{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}L'arrière boutique{% endblock %}

{% block body %}

<div class="container">

    <h1 class="text-center">Bienvenue dans l'arrière boutique de ResTokyo</h1>

    {% if error %}
        <div class="text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<div class="container-md text-center">
    <form action="{{ path('login') }}" method="post">
        <label for="username">Email :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>
</div>

<div class="container-md text-center">
        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}
<div class="container-md text-center">
        <button type="submit" class="badge rounded-pill bg-primary">Connexion</button>
</div>
    </form>
</div>
    
</div>
{% endblock %}