{% extends 'back/menu.html.twig' %}

{% block title %}{{ establishment.name }}{% endblock %}

{% block body_back %}

    <h1>{{ establishment.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ establishment.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ establishment.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ establishment.picture }}"></td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ establishment.type }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ establishment.rating }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_establishment_index') }}" class="btn btn-primary">back to list</a>
    
    <a href="{{ path('back_establishment_edit', {'id': establishment.id}) }}" class="btn btn-success">edit</a>

    {{ include('back/establishment/_delete_form.html.twig') }}

{% endblock %}
