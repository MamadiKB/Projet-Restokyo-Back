{% extends 'back/menu.html.twig' %}

{% block title %}Liste des films{% endblock %}

{% block body_back %}

    <h1>Liste des films</h1>

    <a href="{{ path('back_establishment_new') }}" class="btn btn-primary mb-2">Ajouter un film</a>

    {{ include('_flash_messages.html.twig') }}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for district in districts %}
            <tr>
                <td>{{ district.id }}</td>
                <td>{{ district.name }}</td>
                <td>
                    <a href="{{ path('back_establishment_show', {'id': district.id}) }}" class="btn btn-sm btn-primary">show</a>
                    <a href="{{ path('back_establishment_edit', {'id': district.id}) }}" class="btn btn-sm btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
