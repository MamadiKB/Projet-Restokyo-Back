{% extends 'back/menu.html.twig' %}

{% block title %}User index{% endblock %}

{% block body_back %}
    <h1>User index</h1>

    <a class="btn btn-primary" href="{{ path('back_user_new') }}">Ajouter un utilisateur</a>

    {# {{ include('_flash_messages.html.twig') }} #}
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('back_user_show', {'id': user.id}) }}">show</a>
                    <a class="btn btn-success btn-sm" href="{{ path('back_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
